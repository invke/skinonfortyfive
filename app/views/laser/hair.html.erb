            <li data-target="#hair-carousel" data-slide-to="0" class="active"></li>
            <li data-target="#hair-carousel" data-slide-to="1"></li>
            <li data-target="#hair-carousel" data-slide-to="2"></li>
          </ol>
          <!-- Slides & wrappers -->
          <div class="carousel__inner carousel-inner">
            <!-- Varicose Veins -->
            <div class="item active">
              <div class="carousel__item carousel-item">
                <div class="carousel-item__img"
                     style="background-image: url('<%= image_url 'treatments/laser/hair/6 months post 3rd time Christine Lee MD.jpg' %>')">
                </div>
              </div>
            </div>
            <div class="item">
              <div class="carousel__item carousel-item">
                <div class="carousel-item__img"
                     style="background-image: url('<%= image_url 'treatments/laser/hair/6 months after 3rd time Jacqueline Calkin MD.jpg' %>')">
                </div>
              </div>
            </div>
            <div class="item">
