<div class="container container--slim">
  <!-- Welcome section and prompt contact phone number -->
  <div class="section section--welcome welcome">
    <hr/>
    <div class="welcome__greeting text--times text--center">
      Welcome to Skin on Forty Five!
    </div>

    <div class="double-separator">
      <hr class="double-separator__thick-line"/>
      <hr class="double-separator__thin-line"/>
      <hr class="double-separator__vertical-line"/>
    </div>
  </div>

  <div class="section section--welcome welcome">
    <!--<div class="welcome__greeting text&#45;&#45;times text&#45;&#45;center text&#45;&#45;white elem&#45;&#45;navy-bg">-->
    <!--Welcome to Skin on Forty Five!-->
    <!--</div>-->
    <div class="two-column">
      <div class="two-column__left-column">
        <div class="intro">
          <p class="text--times text--justify-gt-xs">Skin on Forty Five is a skin, vein and cosmetic medicine clinic at the Oakura
            Medical Centre, run by Dr Brent Anderson.</p>
          <br/>
          <p class="text--times text--justify-gt-xs">We offer a broad range of appearance medicine treatments, from PRP, filler
            and BTX to hair, vein and pigment laser treatments!</p>
        </div>
      </div>

      <div class="two-column__vertical-line"></div>

      <div class="two-column__right-column">
        <div class="welcome__contact-us">
          <div class="text--right">
            <span class="text--times">Call us today on</span>
            <br class="elem__hide--sm elem__hide--md elem__hide--lg elem__hide--xl"/>
            <span class="welcome__contact-phone text--times">
            06 6521 245
            </span>
            <div class="welcome__address text--times">
              1147 Main South Road, Surf Highway 45, Oakura
            </div>
            <br/>
            <span class="text--md text--times">Stay connected with us:</span>
            <br/>
          </div>
          <a class="social-media social-media--instagram elem--right" href="">
            <span class="fa fa-instagram"></span>
          </a>
          <a class="social-media social-media--facebook elem--right" href="https://www.facebook.com/skinon45/">
            <span class="fa fa-facebook"></span>
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="double-separator">
    <hr class="double-separator__vertical-line double-separator__vertical-line--reversed"/>
    <hr class="double-separator__thin-line double-separator__thin-line--reversed"/>
    <hr class="double-separator__thick-line double-separator__thick-line--reversed"/>
  </div>

  <!-- Little intro section and hot treatments carousel -->
  <div class="section section--marketing">
    <div class="treatments-carousel">
      <div id="treatments-carousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <li data-target="#treatments-carousel" data-slide-to="0" class="active"></li>
          <li data-target="#treatments-carousel" data-slide-to="1"></li>
        </ol>
        <!-- Slides & wrappers -->
        <div class="carousel-inner">
          <!-- Varicose Veins -->
          <div class="item active">
            <div class="carousel-item">
              <div class="carousel-item__left">
                <div class="carousel-item__left-inner">
                  <h3 class="carousel-item__header text--center text--times text--bold">
                    Varicose Veins
                  </h3>
                  <br/>
                  <br/>
                  <p class="carousel-item__text text--center text--times text--md">
                    At Skin on Forty Five we offer two modern treatments for varicose and spider veins!
                  </p>
                  <br/>
                  <br/>
                  <p class="text--xl text--center text--times text--bold">
                    Laser treatment &
                    <br/>
                    Sclerotherapy!
                  </p>
                </div>
              </div>
              <!--<img class="carousel-item__img" src="https://via.placeholder.com/700x500/dddddd/ffffff" alt="Marketing 1">-->
              <img class="carousel-item__img" src="<%= image_url 'carousel/feet-stock.jpg' %>" alt="Varicose & Spider Vein Removal!">
            </div>
          </div>
          <!-- Introducing: Laser Treatments -->
          <div class="item">
            <div class="carousel-item">
              <div class="carousel-item__left">
                <div class="carousel-item__left-inner">
                  <h3 class="carousel-item__header text--center  text--times">
                    <span class="text--times text--bold">Introducing:</span>
                    <br/>
                    <i>laser treatments</i>
                  </h3>
                  <br/>
                  <br/>
                  <p class="carousel-item__text text-center text--times text--md">
                    We host a suite of highly advanced laser equipment giving us the ability to perform a variety of
                    modern treatments:
                  </p>
                  <br/>
                  <br/>
                  <p class="carousel-item__text text--lg text--center text--bold text--clear">
                    Hair removal,
                    <br/>
                    Spider & Varicose vein removal,
                    <br/>
                    Skin pigment correction
                    <br/>
                    & <b class="text--emph">MORE!</b>
                  </p>
                </div>
              </div>
              <img class="carousel-item__img" src="<%= image_url 'carousel/laser-stock.jpg' %>" alt="Introducing: Laser Treatments!">
            </div>
          </div>
        </div>
        <!-- Navigation controls -->
        <a class="left carousel-control" href="#treatments-carousel" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#treatments-carousel" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>

