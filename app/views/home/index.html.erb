<div class="container-fluid">
  <div class="section section--taranaki">
  </div>
</div>

<div class="container container--slim">
  <!-- Welcome section and prompt contact phone number -->
  <div class="section section--welcome welcome">
    <hr/>
    <div class="welcome__greeting text--times text--center">
      Welcome to Skin on Forty Five!
    </div>

    <div class="double-separator">
      <hr class="double-separator__thick-line"/>
      <hr class="double-separator__thin-line"/>
      <hr class="double-separator__vertical-line"/>
    </div>
  </div>

  <div class="section section--welcome welcome">
    <!--<div class="welcome__greeting text&#45;&#45;times text&#45;&#45;center text&#45;&#45;white elem&#45;&#45;navy-bg">-->
    <!--Welcome to Skin on Forty Five!-->
    <!--</div>-->
    <div class="two-column">
      <div class="two-column__left-column">
        <div class="intro">
          <p class="text--times text--justify-gt-xs">Skin on Forty Five is a skin, vein and cosmetic medicine clinic at
            the Oakura
            Medical Centre, run by Dr Brent Anderson.</p>
          <br/>
          <p class="text--times text--justify-gt-xs">We offer a broad range of appearance medicine treatments, from PRP,
            filler
            and BTX to hair, vein and pigment laser treatments!</p>
        </div>
      </div>

      <div class="two-column__vertical-line"></div>

      <div class="two-column__right-column">
        <div class="welcome__contact-us">
          <div class="text--right">
            <span class="text--times">Call us today on</span>
            <br class="elem__hide--sm elem__hide--md elem__hide--lg elem__hide--xl"/>
            <span class="welcome__contact-phone text--times">
            06 7521 245
            </span>
            <div class="welcome__address text--times">
              1147 Main South Road, Surf Highway 45, Oakura
            </div>
            <br/>
            <span class="text--md text--times">Stay connected with us:</span>
            <br/>
          </div>
          <a class="social-media social-media--instagram elem--right" href="">
            <span class="fa fa-instagram"></span>
          </a>
          <a class="social-media social-media--facebook elem--right" href="https://www.facebook.com/skinon45/">
            <span class="fa fa-facebook"></span>
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="double-separator">
    <hr class="double-separator__vertical-line double-separator__vertical-line--reversed"/>
    <hr class="double-separator__thin-line double-separator__thin-line--reversed"/>
    <hr class="double-separator__thick-line double-separator__thick-line--reversed"/>
  </div>

  <!-- Little intro section and hot treatments carousel -->
  <div class="section section--marketing">
    <div id="treatments-carousel" class="treatments-carousel carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel__indicators carousel-indicators">
        <li data-target="#treatments-carousel" data-slide-to="0" class="active"></li>
        <li data-target="#treatments-carousel" data-slide-to="1"></li>
      </ol>
      <!-- Slides & wrappers -->
      <div class="carousel__inner carousel-inner">
        <!-- Varicose Veins -->
        <div class="item active">
          <div class="carousel__item carousel-item">
            <div class="carousel-item__img image--cover"
                 style="background-image: url('<%= image_url 'treatments/laser/hair/Prowave_BA_2_Combined_sm.jpg' %>')">
            </div>
            <div class="carousel-item__overlay">
              <br/>
              <p class="carousel-item__text text--clear text--center text--md">
                At Skin on Forty Five we offer cutting edge techniques for
              </p>
              <h3 class="carousel-item__header text--center text--clear text--bold">
                Laser hair removal
              </h3>
              <br/>
              <p class="carousel-item__text text--cursive text--center text--md">
                Remove unwanted hair, reveal beautiful, smooth skin
              </p>
            </div>
          </div>
        </div>
        <!-- Introducing: Laser Treatments -->
        <div class="item">
          <div class="carousel__item carousel-item">
            <div class="carousel-item__img image--cover elem__hide--md elem__hide--lg elem__hide--xl"
                 style="background-image: url('<%= image_url 'treatments/laser/veins/xeo_NdYAG-veins_1.jpg' %>')">
            </div>
            <div class="carousel-item__img elem__hide--xs elem__hide--sm"
                 style="background-image: url('<%= image_url 'treatments/laser/veins/xeo_NdYAG-veins_1.jpg' %>')">
            </div>
            <div class="carousel-item__overlay">
              <br/>
              <br/>
              <h3 class="carousel-item__header text--center text--clear text--bold">
                Renew confidence <br/> in your skin
              </h3>
              <br/>
              <p class="carousel-item__text text--cursive text--center text--md">
                with Skin on Forty Five's extensive vascular treatments
              </p>
            </div>
          </div>
        </div>
      </div>
      <!-- Navigation controls -->
      <a class="left carousel__control carousel-control" href="#treatments-carousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel__control carousel-control" href="#treatments-carousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>

  <div class="double-separator">
    <hr class="double-separator__thick-line"/>
    <hr class="double-separator__thin-line"/>
    <hr class="double-separator__vertical-line"/>
  </div>

  <div class="two-column">
    <div class="two-column__left-column">

      <div class="news">
        <h2 class="text--bold text--center">News</h2>

        <div class="news__feed">

          <div class="post">
            <h3 class="post__header">New Treatments Coming Soon!</h3>
            <div class="post__contents text--justify-gt-xs">
              <p class="text--times">The clinic has planned a redevelopment late in 2017 to accommodate further
                facilities and hence offer a
                greater range of treatments and staff to accommodate exciting new developments in the field of skin
                care. We aim to provide the best up to date treatments for skin and a unique range of products to
                supplement our service.</p>
            </div>

            <span class="post__timestamp">October 2017</span>
          </div>

        </div>
      </div>

    </div>

    <div class="two-column__vertical-line"></div>

    <div class="two-column__right-column">

      <div class="book-consult">
        <h2 class="text--bold text--center">Book Consultation</h2>

        <%= render partial: 'shared/book-consult', :locals => {:bookConsultFormId => 'book-consult-form--home'} %>

      </div>

      <br/>
      <br/>

      <div class="hours">
        <h2 class="text--center text--bold">Our Hours</h2>

        <span class="hours__day text--times">Monday</span><span class="hours__days-times text--times">9:00am - 5:00pm</span>
        <br/>
        <span class="hours__day text--times">Tuesday</span><span class="hours__days-times text--times">9:00am - 5:00pm</span>
        <br/>
        <span class="hours__day text--times">Wednesday</span><span class="hours__days-times text--times">9:00am - 5:00pm</span>
        <br/>
        <span class="hours__day text--times">Thursday</span><span class="hours__days-times text--times">9:00am - 5:00pm</span>
        <br/>
        <span class="hours__day text--times">Friday</span><span class="hours__days-times text--times">9:00am - 5:00pm</span>
        <br/>
        <span class="hours__day text--times">Saturday</span><span class="hours__days-times text--times">closed</span>
        <br/>
        <span class="hours__day text--times">Sunday</span><span class="hours__days-times text--times">closed</span>
        <br/>
        <br/>
      </div>

      <div class="contact-details">
        <h2 class="text--center text--bold">Contact us</h2>

        <i class="fa fa-2x fa-phone contact-details__emblem"></i>
        <span class="contact-details__item text--times">06 7521 245</span>
        <br/>
        <i class="fa fa-2x fa-envelope contact-details__emblem"></i>
        <span class="contact-details__item text--times">info@skinonfortyfive.co.nz</span>
        <br/>
        <i class="fa fa-2x fa-map-marker contact-details__emblem"></i>
        <span class="contact-details__item text--times">1147 Main South Road, Surf Highway 45, Oakura</span>
      </div>

    </div>

    <div class="clearfix"></div>
  </div>

  <div class="double-separator">
    <hr class="double-separator__vertical-line double-separator__vertical-line--reversed"/>
    <hr class="double-separator__thin-line double-separator__thin-line--reversed"/>
    <hr class="double-separator__thick-line double-separator__thick-line--reversed"/>
  </div>

  <div class="map">
    <h2 class="text--center text--times text--bold">Where to find us</h2>
    <!-- Google Map -->
    <div id="googleMap" class="map__google-map"></div>
  </div>

</div>

