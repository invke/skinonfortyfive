<!DOCTYPE html>
<html>
<head>
  <title>
    <%=
      if (yield :title) != "Skin on 45"
        (yield :title) + " | Skin on 45"
      else
        yield :title
      end
    %>
  </title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <!-- Google fonts API inclusion -->
  <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet" type="text/css">
  <link href="https://fonts.googleapis.com/css?family=Bad+Script" rel="stylesheet" type="text/css">
  <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet" type="text/css">

  <!-- Google Analytics script inclusion -->
  <script>
      (function (i, s, o, g, r, a, m) {
          i['GoogleAnalyticsObject'] = r;
          i[r] = i[r] || function () {
              (i[r].q = i[r].q || []).push(arguments)
          }, i[r].l = 1 * new Date();
          a = s.createElement(o),
              m = s.getElementsByTagName(o)[0];
          a.async = 1;
          a.src = g;
          m.parentNode.insertBefore(a, m)
      })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

      ga('create', 'UA-100561772-1', 'auto');
      ga('send', 'pageview');
  </script>

</head>

<body class="body">
<div class="body__background-overlay"></div>
<div class="body__content">
  <%= yield %>
</div>
<div class="body__foreground-overlay"></div>
</body>
</html>
